{
  "name": "unctad/payments",
  "description": "Payments micro-service for UNCTAD",
  "keywords": [
    "micro-service",
    "api",
    "laravel",
    "omnipay"
  ],
  "license": "proprietary",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "ext-http": "*",
    "alfaproject/omnipay-skrill": "^2.0@dev",
    "barryvdh/laravel-omnipay": "0.2.x",
    "doctrine/dbal": "^2.9@dev",
    "encore/laravel-admin": "dev-master",
    "fideloper/proxy": "~3.3",
    "hiqdev/omnipay-bitpay": "*",
    "laravel-validation-rules/credit-card": "dev-master",
    "laravel/framework": "5.5.*",
    "laravel/tinker": "~1.0",
    "league/omnipay": "~2.3",
    "omnipay/2checkout": "~2.0",
    "omnipay/coinbase": "~2.0",
    "omnipay/dummy": "~2.0",
    "omnipay/paypal": "~2.0",
    "omnipay/worldpay": "~2.0"
  },
  "require-dev": {
    "barryvdh/laravel-ide-helper": "^2.5@dev",
    "filp/whoops": "~2.0",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "~1.0",
    "phpunit/phpunit": "~6.0",
    "symfony/thanks": "^1.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan ide-helper:generate",
      "php artisan ide-helper:meta"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev"
}
